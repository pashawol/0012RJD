	+b.sLogin
		.container
			.row
				.col-xl-5.col-lg-6
					+form-wrap
						+input("E-mail",'email')
						+input("Пароль",'password')
						+e.btn-wrap
							.row.align-items-center
								.col-auto.col-md-6
