mixin sWelcome()
	// start sWelcome
	+b.sWelcome.section#sWelcome&attributes(attributes)
		.container 
			+e.head
				.row
					.col-lg-6
					.col
						.row
							.col ПРИВЕТСТВИЕ УЧАСТНИКАМ
								
							.col-auto
								.cotrol-wrap
									+arrow()
			+e.slider--js.swiper-container
				.swiper-wrapper
					- for (var x = 0; x < 3; x++)
						+e.slide.swiper-slide
							.row
								.col-lg-6.order-first
